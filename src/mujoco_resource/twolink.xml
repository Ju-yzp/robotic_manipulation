<mujoco model="two_link_arm_with_gaps">
    <option timestep="0.01" gravity="0 0 -9.81"/>
    
    <default>
        <joint armature="0.1" damping="0.5" limited="true"/>
        <geom condim="3" friction="1 0.1 0.1" rgba="0.8 0.6 0.4 1"/>
    </default>
    
    <worldbody>
        <geom name="floor" type="plane" size="5 5 0.1" rgba="0.9 0.9 0.9 1"/>
        
        <!-- 基座 body -->
        <body name="base" pos="0 0 0.2">
            <!-- 基座的几何形状，设置合适尺寸，比如立方体 -->
            <geom name="base_geom" type="box" size="0.2 0.2 0.1" rgba="0.5 0.5 0.5 1"/>
            <!-- 第一个关节，连接基座和连杆1 -->
            <joint name="joint1" type="hinge" axis="0 0 1" range="-3.1416 3.1416"/>
            
            <!-- 连杆1 body -->
            <body name="link1" pos="0.3 0 0.2">  <!-- 与基座在 Y、Z 方向错开，X 方向拉开距离形成缝隙 -->
                <!-- 连杆1的几何形状，比如胶囊体 -->
                <geom name="link1_geom" type="capsule" fromto="0 0 0 0.4 0 0" size="0.08" rgba="0 0 1 1"/>
                <!-- 第二个关节，连接连杆1和连杆2 -->
                <joint name="joint2" type="hinge" axis="0 0 1" range="-3.1416 3.1416"/>
                
                <!-- 连杆2 body -->
                <body name="link2" pos="0.4 0 0.2">  <!-- 与连杆1在 Y、Z 方向错开，X 方向拉开距离形成缝隙 -->
                    <!-- 连杆2的几何形状，比如胶囊体 -->
                    <geom name="link2_geom" type="capsule" fromto="0 0 0 0.4 0 0" size="0.08" rgba="1 0 0 1"/>
                </body>
            </body>
        </body>
    </worldbody>
    
    <actuator>
        <motor name="motor1" joint="joint1" gear="500"/>
        <motor name="motor2" joint="joint2" gear="500"/>
    </actuator>
</mujoco>